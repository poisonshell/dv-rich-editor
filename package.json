{
  "name": "dv-rich-editor",
  "version": "0.7.8",
  "type": "module",
  "description": "A Dhivehi rich text editor plugin with Thaana keyboard support and markdown output",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.esm.js",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./editor/DhivehiRichEditor": {
      "import": "./dist/editor/DhivehiRichEditor.js",
      "require": "./dist/editor/DhivehiRichEditor.js",
      "types": "./dist/editor/DhivehiRichEditor.d.ts"
    },
    "./editor/ThemeManager": {
      "import": "./dist/editor/ThemeManager.js",
      "require": "./dist/editor/ThemeManager.js",
      "types": "./dist/editor/ThemeManager.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "check:react-entry": "npx -y tsc -p tools/react-entry-check/tsconfig.json --noEmit",
    "compile": "npm run bundle && npm run compile:types",
    "bundle": "rollup -c && rollup -c rollup.config.react.js",
  "compile:types": "npx -y tsc -b tsconfig.core.json --force && npx -y tsc -p tsconfig.react.types.json",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "dev:react": "tsc -p tsconfig.react.json --watch",
    "dev:example": "cd examples/react-vite-app && vite",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "bench": "node bench/run.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-typescript": "^11.1.5",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "rollup": "^4.9.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/poisonshell/dv-rich-editor.git"
  },
  "bugs": {
    "url": "https://github.com/poisonshell/dv-rich-editor/issues"
  },
  "homepage": "https://github.com/poisonshell/dv-rich-editor/#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "sideEffects": [
    "dist/index.js",
    "dist/index.esm.js",
    "dist/dv-rich-editor.umd.js",
    "dist/react/index.js",
    "dist/react/index.esm.js",
    "**/editor-styles.*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
