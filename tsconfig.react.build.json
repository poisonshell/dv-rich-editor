{
  "extends": "./tsconfig.react.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      // During local build, allow resolving package-root deep imports to source files
      "dv-rich-editor/*": ["src/*"],
      "dv-rich-editor": ["dist/index.d.ts"]
    },
    // Ensure the React build does not emit declarations itself; core already emitted them
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false
  },
  "references": []
}
