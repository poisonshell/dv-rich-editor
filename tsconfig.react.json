{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist/react",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "skipLibCheck": true
  },
  "baseUrl": "./",
  "paths": {
    "dv-rich-editor": ["dist/index.d.ts"],
    "dv-rich-editor/*": ["dist/*"]
  },
  "include": [
    "src/react/**/*"
  ],
  "references": [
    { "path": "./tsconfig.core.json" }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "**/*.test.*",
    "**/*.spec.*",
    "src/core/**/__tests__/**"
  ]
} 